<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondologin"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/tEmail"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:maxLength="30"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="78dp" />

    <EditText
        android:id="@+id/tPassword"
        android:layout_width="330dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="15"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="133dp" />

    <Button
        android:id="@+id/creaButton"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tEmail"
        android:layout_alignRight="@+id/tEmail"
        android:layout_alignParentTop="true"
        android:layout_marginTop="184dp"
        android:background="@drawable/buttonshape"
        android:text="Crea account"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="330dp"
        android:layout_height="314dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="

Regole per le Credenziali:\n\n
Email: Massimo caratteri: 30, Contenente solamente una '@' e un Punto.\n\n
Password: Compresa tra 6 e 15 Caratteri, compresi numeri interi."
        android:textColor="#ffffff"
        android:textSize="20dp" />
</RelativeLayout>